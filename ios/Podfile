# --------------------------- ios/Podfile ---------------------------
platform :ios, '14.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Locate FLUTTER_ROOT from Generated.xcconfig
def flutter_root
  generated = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  raise "#{generated} missing; run flutter pub get" unless File.exist?(generated)

  File.foreach(generated) do |line|
    m = line.match(/FLUTTER_ROOT\=(.*)/)
    return m[1].strip if m
  end
  raise 'FLUTTER_ROOT not found'
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
flutter_ios_podfile_setup

# -------- Main Flutter app target ---------------------------------
target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # All Flutter plugins
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Firestore binary framework
  pod 'FirebaseFirestore',
      :git => 'https://github.com/invertase/firestore-ios-sdk-frameworks.git',
      :tag => '11.4.0'
end

# -------- Notification Service Extension (no Flutter plugins) -----
target 'ImageNotification' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Only what the extension actually needs
  pod 'Firebase/Messaging'
  pod 'GoogleUtilities'
end

# -------- Post-install: global build settings + RevenueCat patch --
post_install do |installer|
  # Swift / deployment settings for every pod target
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t)
    t.build_configurations.each do |c|
      c.build_settings['SWIFT_VERSION']              = '5.0'
      c.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end

  # Patch RevenueCat SubscriptionPeriod clash
  pods_root   = installer.sandbox.root
  rc_swift    = File.join(
    pods_root,
    'PurchasesHybridCommon', 'ios', 'PurchasesHybridCommon',
    'PurchasesHybridCommon', 'StoreProduct+HybridAdditions.swift'
  )
  if File.exist?(rc_swift)
    src    = File.read(rc_swift)
    patched = src.gsub(/\bSubscriptionPeriod\b/, 'RevenueCat.SubscriptionPeriod')
    File.write(rc_swift, patched)
  end
end
# ------------------------------------------------------------------